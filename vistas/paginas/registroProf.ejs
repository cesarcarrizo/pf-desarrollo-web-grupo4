<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('parciales/head') %>
    <title>TECH TEAM - Registro Profesional</title>
  </head>

  <body>
    <%- include('parciales/encabezado') %>

    <!-- BODY (corregir ortografia)-->

    <div class="container">
      <div class="h3 text-dark float-center">
        Formulario de aplicacion para ser profesional
      </div>
      <form method="POST" role="form">
        <div class="form-group">
          <label>Número de identificación</label>
          <input
            name="ced_pro_pk"
            type="text"
            class="form-control"
            placeholder="Cedula o Pasaporte"
            required
          />
        </div>
        <div class="form-group">
          <label>Nombre</label>
          <input
            name="nom_pro"
            type="text"
            class="form-control"
            placeholder="Digite nombre/es"
            required
          />
        </div>
        <div class="form-group">
          <label>Apellidos</label>
          <input
            name="ape_pro"
            type="text"
            class="form-control"
            placeholder="Digite apellido/os"
            required
          />
        </div>
        <div class="form-group">
          <label>Celular</label>
          <input
            name="telf_pro"
            type="text"
            class="form-control"
            placeholder="Digite telefono"
            required
          />
        </div>
        <div class="form-group">
          <label>Email</label>
          <input
            name="email_pro"
            type="text"
            class="form-control"
            placeholder="Digite email"
            required
          />
        </div>
        <div class="form-group">
          <label>Direccion (opcional)</label>
          <input
            name="resi_pro"
            type="text"
            class="form-control"
            placeholder="Digite email"
          />
        </div>

        <div class="form-group">
          <label>Contraseña</label>
          <input
            name="passwd_usu"
            type="text"
            class="form-control"
            placeholder="Digite un password, este sera su password en caso de ser aceptado"
            required
          />
        </div>

        <div class="form-group">
          <input
            class="btn btn-success"
            type="submit"
            value="Enviar solicitud"
          />
        </div>
      </form>
    </div>
    <br />
    <br />
    <br />
    <br />
    <!--FIN BODY-->
    <%- include('parciales/nav') %> <%- include('parciales/scripts') %>
  </body>
</html>
